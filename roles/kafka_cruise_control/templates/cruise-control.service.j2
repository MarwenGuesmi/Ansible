[Unit]
Description=cruise-control
Requires=network.target
After=network.target

[Service]
Type=simple
StandardOutput=null
Environment="LOG_DIR={{ cruise_log_dir }}"
ExecStart={{ cruise_dir }}/kafka-cruise-control-start.sh -jars {{ cruise_dir }}/cruise-control-metrics-reporter/build/libs,/opt/kafka/libs {{ cruise_dir }}/config/cruisecontrol.properties 9090 
ExecStop={{ cruise_dir }}/kafka-cruise-control-stop.sh
User={{ cruise_user }}
Group={{ cruise_group }}
Restart=on-failure
LimitNOFILE=infinity
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
Alias=cruise-control.service
